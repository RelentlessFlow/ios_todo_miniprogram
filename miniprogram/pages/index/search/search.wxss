.container {
  display: flex;
  height: 60rpx;
  align-items: center;
}

.container_shade {
  position: absolute;
  top: 0; left: 0;
  height: 100vh; width: 100vh;
  background-color: #0000001e;
  z-index: 100;
}

.seach {
  display: flex;
  font-size: 30rpx;
  background-color: #e3e3ea;
  align-items: center;
  height: 60rpx;
  flex: 1;
  padding: 0 10rpx;
  border-radius: 25rpx;
}

.seach-icon {
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  padding: 2rpx;
}

.seach-input {
  font-size: 28rpx;
  line-height: 28rpx;
  flex-grow: 1;
  margin-left: 10rpx;
}

.clear-btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  color: #f1f2f6;
  box-sizing: border-box;
  background-color: #8e8f93;
  
}

.right-btn {
  font-size: 30rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 100rpx !important;
  background: none;
  color: #006df6;
  font-weight: 350;
}